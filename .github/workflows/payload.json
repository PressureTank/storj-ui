{
  "text": "${{ github.workflow }}: ${{ job.status }}",
  "attachments": [
    {
      "color": "#d90000",
      "blocks": [
        {
          "type": "section",
          "text": {
            "type": "mrkdwn",
            "text": "The ${{ github.workflow }} workflow has executed and has ${{ job.status }} in the ${{ github.event.repository.name }} repository!"
          }
        },
        {
          "type": "divider"
        },
        {
          "type": "actions",
          "elements": [
            {
              "type": "button",
              "text": {
                "type": "plain_text",
                "text": "${{ github.workflow }}",
                "emoji": true
              },
              "url": "$GITHUB_SERVER_URL/$GITHUB_REPOSITORY/actions/runs/$GITHUB_RUN_ID"
            },
            {
              "type": "button",
              "text": {
                "type": "plain_text",
                "text": "Trace Viewer",
                "emoji": true
              },
              "url": "https://trace.playwright.dev/"
            }
          ]
        }
      ]
    }
  ]
}
